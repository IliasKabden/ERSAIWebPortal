<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Semantic-UI/semantic.min.css" rel="stylesheet" />

</head>
<body>
    @RenderBody()
    <style>
        .menu.header {
            padding-top: 50px;
        }
    </style>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    <script src="~/Content/Semantic-UI/semantic.min.js"></script>
    <script src="~/Scripts/require.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/Travel/Travel.js"></script>
    <script src="~/Scripts/Travel/main.js"></script>
    <script>
        $(document).ready(function () {
            $('.ui.sidebar').sidebar({
                transition: 'overlay'
            });
            // For responsive sidebar menu
            $("a.sidebar-toggle").click(function () {
                $('.ui.sidebar').sidebar('toggle');
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>